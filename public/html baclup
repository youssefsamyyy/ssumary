          </div>
          
          <!-- File Summarization Tab -->
          <div class="tab-pane fade" id="file" role="tabpanel">
            <div class="mb-3">
              <label class="form-label section-title">رفع ملف (PDF أو Word):</label>
              <input type="file" id="fileInput" class="form-control" accept=".pdf,.doc,.docx">
              <div id="fileInfo" class="small text-muted mt-2"></div>
            </div>
            <button id="summarizeBtn" class="btn btn-success">
              <span id="fileSpinner" class="spinner"></span>
              تلخيص الملف
            </button>
            
            <div class="mt-4">
              <label class="form-label section-title">الملخص:</label>
              <div id="fileResult" class="result-box"></div>
