  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const API_BASE_URL = window.location.origin;
      
      // Initialize tabs
      const tabEls = document.querySelectorAll('[data-bs-toggle="tab"]');
      tabEls.forEach(tabEl => {
        tabEl.addEventListener('click', function(e) {
          e.preventDefault();
          const tab = new bootstrap.Tab(this);
          tab.show();
        });
      });

      // Helper functions
      function showError(element, message) {
        element.textContent = message;
        element.style.display = 'block';
      }

      function hideError(element) {
        element.style.display = 'none';
      }

      function copyToClipboard(elementId, button) {
        const text = document.getElementById(elementId).textContent;
        navigator.clipboard.writeText(text).then(() => {
          const originalHtml = button.innerHTML;
          button.innerHTML = '<i class="fas fa-check"></i> تم النسخ!';
          setTimeout(() => button.innerHTML = originalHtml, 2000);
        });
      }

      // Text Correction
      document.getElementById('correctBtn').addEventListener('click', async function() {
        const text = document.getElementById('textInput').value.trim();
        const resultEl = document.getElementById('textResult');
        const explanationEl = document.getElementById('explanationResult');
        const errorEl = document.getElementById('textError');
        const spinner = document.getElementById('textSpinner');

        // Clear previous results
        resultEl.textContent = '';
        explanationEl.textContent = '';
        hideError(errorEl);

        if (!text) {
          showError(errorEl, 'الرجاء إدخال نص عربي لتصحيحه');
          return;
        }

        // Show loading state
        spinner.style.display = 'inline-block';
        this.disabled = true;

        try {
          const response = await fetch(`${API_BASE_URL}/correctText`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'Accept': 'application/json'
            },
            body: JSON.stringify({ text })
          });

          const data = await response.json();
          if (response.ok) {
            resultEl.textContent = data.correctedText || text;
            explanationEl.textContent = data.explanation || "لا توجد أخطاء تحتاج تصحيحاً";
          } else {
            throw new Error(data.message || data.error || 'فشل في تصحيح النص');
          }
        } catch (error) {
          console.error("Error:", error);
          showError(errorEl, error.message);
        } finally {
          spinner.style.display = 'none';
          this.disabled = false;
        }
      });

      // File Summarization
      document.getElementById('summarizeBtn').addEventListener('click', async function() {
        const fileInput = document.getElementById('fileInput');
        const file = fileInput.files[0];
        const resultEl = document.getElementById('fileResult');
        const errorEl = document.getElementById('fileError');
        const spinner = document.getElementById('fileSpinner');

        if (!file) {
          showError(errorEl, 'الرجاء اختيار ملف أولاً');
          return;
        }

        // Reset UI
        hideError(errorEl);
        resultEl.textContent = 'جاري معالجة الملف...';
        spinner.style.display = 'inline-block';
        this.disabled = true;

        try {
          const formData = new FormData();
          formData.append('file', file);

          const response = await fetch(`${API_BASE_URL}/summarizeFile`, {
            method: 'POST',
            body: formData
          });

          const data = await response.json();
          if (response.ok) {
            resultEl.textContent = data.text || "تعذر إنشاء الملخص";
          } else {
            throw new Error(data.message || data.error || 'فشل في تلخيص الملف');
          }
        } catch (error) {
          console.error("Error:", error);
          showError(errorEl, error.message);
          resultEl.textContent = '';
        } finally {
          spinner.style.display = 'none';
          this.disabled = false;
        }
      });

      // File input change handler
      document.getElementById('fileInput').addEventListener('change', function() {
        document.getElementById('fileInfo').textContent = this.files[0] ?
          `تم اختيار: ${this.files[0].name} (${(this.files[0].size / (1024 * 1024)).toFixed(2)} ميجابايت)` :
          'لم يتم اختيار ملف';
        hideError(document.getElementById('fileError'));
      });

      // Search Functionality
      document.getElementById('searchBtn').addEventListener('click', function() {
        const searchInput = document.getElementById('searchInput').value.trim();
        const searchResults = document.getElementById('searchResults');
        
        if (!searchInput) {
          searchResults.innerHTML = `
            <div class="alert alert-warning">
              <i class="fas fa-exclamation-triangle"></i> الرجاء إدخال كلمة البحث
            </div>
          `;
          return;
        }

        // Show loading state
        searchResults.innerHTML = `
          <div class="text-center">
            <div class="spinner" style="display: inline-block; width: 2rem; height: 2rem;"></div>
            <p>جاري البحث عن "${searchInput}"...</p>
          </div>
        `;

        // Make API call to search endpoint
        fetch(`${API_BASE_URL}/search`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ query: searchInput })
        })
        .then(response => response.json())
        .then(data => {
          if (data.results && data.results.length > 0) {
            let resultsHTML = '';
            data.results.forEach(result => {
              resultsHTML += `
                <div class="search-result-item">
                  <h5>${result.title}</h5>
                  <p>${result.content}</p>
                </div>
              `;
            });
            searchResults.innerHTML = resultsHTML;
          } else {
            searchResults.innerHTML = `
              <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> لا توجد نتائج لـ "${searchInput}"
              </div>
            `;
          }
        })
        .catch(error => {
          console.error("Search error:", error);
          searchResults.innerHTML = `
            <div class="alert alert-danger">
              <i class="fas fa-exclamation-circle"></i> حدث خطأ أثناء البحث
            </div>
          `;
        });
      });

      // Enable search on Enter key
      document.getElementById('searchInput').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
          document.getElementById('searchBtn').click();
        }
      });

      // Copy buttons
      document.getElementById('copyText').addEventListener('click', function() {
        copyToClipboard('textResult', this);
      });

      document.getElementById('copyFile').addEventListener('click', function() {
        copyToClipboard('fileResult', this);
      });
    });
  </script>
</body>
</html>