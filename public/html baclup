    <div class="card shadow">
      <div class="card-header">
        <h2 class="text-center mb-0"><i class="fas fa-language"></i> منظومة التصحيح والتلخيص</h2>
      </div>
      <div class="card-body">
        <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="text-tab" data-bs-toggle="tab" data-bs-target="#text" type="button">
              <i class="fas fa-spell-check"></i> تصحيح النصوص
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="file-tab" data-bs-toggle="tab" data-bs-target="#file" type="button">
              <i class="fas fa-file-alt"></i> تلخيص الملفات
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="search-tab" data-bs-toggle="tab" data-bs-target="#search" type="button">
              <i class="fas fa-search"></i> البحث في المعرفة
            </button>
          </li>
        </ul>
        
        <div class="tab-content" id="myTabContent">
          <!-- Text Correction Tab -->
          <div class="tab-pane fade show active" id="text" role="tabpanel">
            <div class="mb-3">
              <label class="form-label section-title">أدخل النص العربي:</label>
              <textarea id="textInput" class="form-control" rows="6" placeholder="الصق النص العربي هنا..."></textarea>
            </div>
            <button id="correctBtn" class="btn btn-primary">
              <span id="textSpinner" class="spinner"></span>
              تصحيح النص
            </button>
            
            <div class="mt-4">
              <label class="form-label section-title">النص المصحح:</label>
              <div id="textResult" class="result-box"></div>
